
@{
    ViewData["Title"] = "AddDeals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<div class="pull-right btn btn-info">
    @Html.ActionLink("Back", "Choose", "Home")
</div>
<br />
<form action="AddDeals" method="post">
    <div class="text">Add Your Deals And Promotion</div>
    <br /><br />
    <div class="row center-block">
        <div class="col-md-6 col-md-offset-4">
            <input class="form-control" id="image1" name="image" type="file" required /> <br />
        </div>
        <div class="col-md-6 col-md-offset-4">
            <textarea class="form-control" rows="2" id="desc1" name="description" type="text" placeholder="Description of Product" required></textarea> <br />
        </div>
        <div class="col-md-6 col-md-offset-4">
            <input class="form-control" id="price1" name="price" type="number" placeholder="Price" required/> <br />
        </div>
        <div class="col-md-6 col-md-offset-3">
            <input class="btn btn-info center-block  btn-block" id="addpro1" type="submit" value="Add Product"/>
    </div>
        </div>
    </form>
