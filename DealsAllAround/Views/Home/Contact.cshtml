@model DealsAllAround.Data.UserProvider

@{
    ViewData["Title"] = "";
}
<br />
<div class="text-center">
    <img src="~/Images/Capture.png">
</div>
         <p class="text">Have Any Questions?Send Us Now</p>

<div class="row center-block">
    <form action="Contact" method="post" id="form1">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="col-md-6 col-md-offset-4">
            <input class="form-control" id="name1" name="name" type="text" placeholder="Your Name" required aria-required="true" /> <br />
        </div>
        <div class="col-md-6 col-md-offset-4">
            <input class="form-control " id="Email" name="email" type="email" placeholder="Email Address" required aria-required="true" /> <br />
        </div>
        <div class="col-md-6 col-md-offset-4">
            <textarea class="form-control" id="message" name="message" type="text" rows="5" placeholder="Enter Your Message" required aria-required="true" aria-invalid="true"></textarea> <br />
        </div>
        <div class="col-md-6 col-md-offset-3">
            <input class="btn btn-info btn-block center-block" id="contact1" type="submit" value="Submit"/>
        </div>
    </form>
</div>